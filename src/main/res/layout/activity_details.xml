<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.DetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ice"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageButton
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:id="@+id/btn_open_drawer_details"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@color/transparent"
            android:onClick="openDrawer"
            android:background="@drawable/back"/>

        <ImageView
            android:src="@drawable/lucasrangoo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_margin="30dp"
        android:padding="20dp"
        android:background="@color/soft20"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <TextView
            android:id="@+id/name_details"
            android:text="Nome Prato"
            android:textSize="30dp"
            android:textColor="@color/dark"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/image_details"
            android:src="@drawable/franguinho"
            android:background="@drawable/border_image"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <TextView
            android:id="@+id/description_details"
            android:layout_marginBottom="10dp"
            android:textSize="15dp"
            android:textAlignment="inherit"
            android:justificationMode="inter_word"
            android:text="sadafafafasfasfasfafsssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <Button
        android:id="@+id/addList_details"
        android:text="Adicionar Prato"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/baron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>